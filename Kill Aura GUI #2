local Camera = game.Workspace.CurrentCamera
local InputService = game:GetService("UserInputService")

local GameId = game.PlaceId


local WINDOW_NAME = "Kill Aura made by slump ðŸ‘»#7161 ;)"
local SIZE_X = 150
